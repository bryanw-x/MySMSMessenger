<div class="border-box left-side">
    <h2>New Message</h2>
    <form ng-submit="sendMessage()">
        <div class="form-group">
            <label for="phone-number">Phone Number:</label>
            <input type="text" id="recipient_phone" ng-model="newMessage.recipient_phone">
        </div>

        <div class="form-group">
            <label for="text">Message:</label>
            <textarea id="text" ng-model="newMessage.text"></textarea>
        </div>

        <div class="form-group">
            <button type="submit">Submit</button>
            <%# <button type="button" ng-click="showNewMessageForm = false">Clear</button> %>
            <%# <button ng-click="clear()">Clear</button> %>
            <button type="button" ng-click="clear()">Clear</button>
        </div>
    </form>
</div>
